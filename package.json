{
  "name": "retro-sundays-api",
  "version": "1.0.0",
  "description": "API jogos arcade",
  "main": "/src/main/server.ts",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && cross-env && node dist/main/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear --inspect=0.0.0.0:9229 src/main/server.ts",
    "build": "rimraf dist/ && tsc -p tsconfig-build.json",
    "build-all": "rimraf dist/ && tsc -p tsconfig.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:create": "npm run typeorm migration:create -- -c dev -n",
    "migration:run": "npm run typeorm migration:run -- -c dev",
    "migration:revert": "npm run typeorm migration:revert -- -c dev"
  },
  "dependencies": {
    "helmet": "^6.0.0",
    "module-alias": "^2.2.2",
    "swagger-ui-express": "^4.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typeorm": "^0.2.28"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.7.15",
    "cross-env": "^7.0.3",
    "eslint": "^8.23.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-standard": "^5.0.0",
    "express": "^4.18.1",
    "fs": "^0.0.1-security",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.2"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
