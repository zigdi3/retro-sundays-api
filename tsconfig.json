{
  "compilerOptions": {
      "outDir": "dist",
      "rootDirs": ["src", "test"],
      "target": "es2021",
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "baseUrl": "src",
      "noImplicitOverride": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "paths": {
        "@/*": ["*"],
        "@test/*": ["../test/*"]
      },
  },
  "include": ["src", "test"],
  "exclude": []
}
